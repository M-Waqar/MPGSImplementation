
@{
    ViewBag.Title = "Void";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "RetriveOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>MPGS</h1>
    <p class="lead">Implementing a Void Transaction</p>
    <p>Prerequisites:</p>
    <ul>
        
        <li>
            A valid existing order ID and Transaction ID are needed to Void a transaction.
        </li>
        <li>
            That is the {transactionId} URL field for REST and the transaction.id field for NVP.
        </li>
    </ul>
</div>

<div class="col-9">
    <div class="row">
        <div class="contents col-12">
            <div class="col-md-12">
                <div style="float: left">

                    @using (Html.BeginForm("VoidOrder", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="control-label col-sm-4" for="email">Order ID:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Id" value="" name="Id" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-4" for="email">Transaction ID:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Transactionid" value="" name="Transactionid" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8">
                                <button type="submit" id="btnPaymentSubmit" value="Submit" class="mt-4 btn btn-primary">Get Transaction</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

