
@{
    ViewBag.Title = "RetriveOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h1>MPGS</h1>
    <p class="lead">Implementing a Retrieve Order</p>
    <p>Prerequisites:</p>
    <ul>
        <li>
            A valid order ID are needed to retrieve a order.
        </li>
    </ul>
</div>

<div class="col-9">
    <div class="row">
        <div class="contents col-12">
            <div class="col-md-12">
                <div style="float: left">

                    @using (Html.BeginForm("GetOrder", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="control-label col-sm-4" for="email">Order ID:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Id" value="" name="Id" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8">
                                <button type="submit" id="btnPaymentSubmit" value="Submit" class="mt-4 btn btn-primary">Get Transaction</button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>